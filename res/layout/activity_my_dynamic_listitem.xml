<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/my_dynamic_listitem_userface"
        style="@style/user_face_image" />

   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_dynamic_listitem_username"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="username"
                android:textColor="@color/listitem_blue"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/my_dynamic_listitem_type"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:text="赞了我"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />

            <TextView
                android:id="@+id/my_dynamic_listitem_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="20dip"
                android:drawableLeft="@drawable/widget_comment_count_icon"
                android:text="回复"
                android:gravity="center"
                android:drawablePadding="3dp"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />

        </LinearLayout>

        <TextView
            android:id="@+id/my_dynamic_listitem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:autoLink="web|email"
            android:text="content"
            android:textColor="@color/listitem_black"
            android:textColorLink="@color/listitem_blue"
            android:textSize="@dimen/text_size_15" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/my_dynamic_listitem_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="data"
                android:textColor="@color/listitem_gray"
                android:textSize="@dimen/text_size_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_dynamic_listitem_content_lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="@drawable/review_bg_top"
            android:orientation="vertical" >
             <TextView
                android:id="@+id/my_dynamic_listitem_content_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="data"
                android:gravity="center_vertical"
                android:textColor="@color/listitem_gray"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size_15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>