<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"    
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip"
    android:background="#ffffff"
    android:paddingBottom="7dip">   

    <ImageView 
    	android:id="@+id/my_message_listitem_userface"
      	style="@style/user_face_image"/>

	<LinearLayout
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip"> 
	       	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="6dip"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/my_message_listitem_username"
	            android:layout_width="174dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.54"
	            android:includeFontPadding="false"
	            android:text="dffdfd"
	            android:textColor="@color/listitem_blue"
	            android:textSize="@dimen/text_size_14" />

	        <TextView
	            android:id="@+id/my_message_listitem_comment"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="right"
	            android:layout_marginLeft="20dip"
	            android:drawableLeft="@drawable/widget_comment_count_icon"
	            android:drawablePadding="3dp"
	            android:gravity="center"
	            android:text="回复"
	            android:textColor="@color/listitem_gray"
	            android:textSize="@dimen/text_size_10" />
	    </LinearLayout>
                		    
		<TextView
			android:id="@+id/my_message_listitem_content" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_marginTop="8dip"
			android:textSize="@dimen/text_size_15"
			android:textColor="@color/listitem_black"
			android:text="dffdfd"
			android:textColorLink="@color/listitem_blue"
			android:autoLink="web|email"/>
		
		<LinearLayout 
	    	android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dip"> 
			
	       	<TextView 
	        	android:id="@+id/my_message_listitem_date" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:textSize="@dimen/text_size_10"
	         	android:text="2014-8-20"
	         	android:textColor="@color/listitem_gray"/> 
        </LinearLayout>
		<LinearLayout
			android:id="@+id/my_message_listitem_relies"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_marginTop="8dip"
    		android:orientation="vertical"
    		android:background="@drawable/review_bg_top">
    	</LinearLayout>
    	
			        
	</LinearLayout>

</LinearLayout> 
