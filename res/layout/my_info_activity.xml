<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/info"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:onClick="myInfoClick" >

                <FrameLayout
                    android:id="@+id/frame_photo"
                    android:layout_width="60.0dip"
                    android:layout_height="60.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip" >

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/person_photo_bg"
                        android:clickable="false"
                        android:focusable="false"
                        android:padding="5.0dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/person_photo" />

                    <ProgressBar
                        android:id="@+id/image_progress"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:indeterminateDrawable="@drawable/progressbar"
                        android:visibility="gone" />
                </FrameLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toRightOf="@id/frame_photo"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="张敏"
                    android:textColor="#ff262626"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/change_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="16.0dip"
                    android:drawableRight="@drawable/right_arrow"
                    android:paddingRight="18.0dip"
                    android:singleLine="true"
                    android:text="更改头像"
                    android:textColor="#ff262626"
                    android:textSize="16.0sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/divider1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="54.0dip" >

                <TextView
                    android:id="@+id/sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="10.0dip"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="#ff262626"
                    android:textSize="15.0dip" />

                <RadioGroup
                    android:id="@+id/sexgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20.0dip"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/sex_radio_male_bn"
                        android:paddingLeft="24.0dip"
                        android:text="男"
                        android:textColor="#ff262626"
                        android:textSize="16.0dip" />

                    <RadioButton
                        android:id="@+id/woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="27.0dip"
                        android:button="@drawable/sex_radio_famale_bn"
                        android:drawablePadding="7.0dip"
                        android:paddingLeft="24.0dip"
                        android:text="女"
                        android:textColor="#ff262626"
                        android:textSize="16.0dip" />
                </RadioGroup>
            </RelativeLayout>

            <ImageView
                android:id="@+id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <LinearLayout
                android:id="@+id/intro_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10.0dip" >

                <TextView
                    android:id="@+id/intro_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:singleLine="true"
                    android:text="个人说明:"
                    android:textColor="#ff262626"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/person_change_abstract_bg"
                    android:gravity="fill_horizontal|top|center"
                    android:maxLength="50"
                    android:minLines="1"
                    android:textColor="#ff505050"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:padding="0.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <LinearLayout
                android:id="@+id/intro_click_"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10.0dip" >

                <TextView
                    android:id="@+id/intro_text_"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:singleLine="true"
                    android:text="详细信息:"
                    android:textColor="#ff262626"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/edit_info"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/person_change_abstract_bg"
                    android:gravity="fill_horizontal|top|center"
                    android:maxLength="50"
                    android:minLines="1"
                    android:textColor="#ff505050"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>