<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/divider1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <ImageView
                android:id="@+id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <LinearLayout
                android:id="@+id/not_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/intro_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:singleLine="true"
                    android:text="个人说明:"
                    android:textColor="#ff262626"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/person_change_abstract_bg"
                    android:gravity="fill_horizontal|top|center"
                    android:hint="请输入手机号或者邮箱"
                    android:maxLength="50"
                    android:minLines="1"
                    android:textColor="#ff505050"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/not_login_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:visibility="gone" >

               
                <EditText
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/person_change_abstract_bg"
                    android:gravity="fill_horizontal|top|center"
                    android:hint="请输入姓名"
                    android:maxLength="50"
                    android:minLines="1"
                    android:textColor="#ff505050"
                    android:textSize="16.0dip" />
            </LinearLayout>

            <ImageView
                android:id="@+id/divider3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:padding="0.0dip"
                android:scaleType="fitXY"
                android:src="@drawable/line" />

            <LinearLayout
                android:id="@+id/intro_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingBottom="10.0dip" >

                <TextView
                    android:id="@+id/intro_text_"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:singleLine="true"
                    android:text="意见反馈:"
                    android:textColor="#ff262626"
                    android:textSize="18.0dip" />

                <EditText
                    android:id="@+id/suggesstions"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_marginTop="18.0dip"
                    android:background="@drawable/person_change_abstract_bg"
                    android:gravity="fill_horizontal|top|center"
                    android:maxLength="50"
                    android:minLines="1"
                    android:textColor="#ff505050"
                    android:textSize="16.0dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>