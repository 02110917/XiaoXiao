<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

        <LinearLayout
        android:id="@+id/not_login_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/not_login_img"
            android:layout_width="wrap_content"
            android:src="@drawable/pic_inset_login"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/not_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你还没有登录哦，赶快去登录吧！"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10.0dip" >

            <Button
                android:id="@+id/login_btn"
                android:layout_width="0.0dip"
                android:layout_height="46.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="登录"
                android:background="@drawable/btn_login_selector"
                android:textSize="18.0dip" />

            <Button
                android:id="@+id/reg_btn"
                android:layout_width="0.0dip"
                android:layout_height="46.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="注册"
                android:background="@drawable/btn_w_square"
                android:textSize="18.0dip" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/image" />

            <ImageView
                android:id="@+id/base_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageView1"
                android:src="@drawable/user_base_line" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/base_line"
                android:background="@drawable/user_center_bg" >

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="36dp"
                    android:gravity="center"
                    android:text="张敏"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="68dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/user_name"
                    android:gravity="center_vertical"
                    android:text="我们都是好孩子...大家都是好孩子！！！"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_15" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView2"
                style="@style/user_face_image_big_big"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout1"
                android:orientation="horizontal" >

                <RelativeLayout style="@style/personal_big_button_panel" >

                    <LinearLayout
                        android:id="@+id/button_dt"
                        style="@style/personal_big_button" >

                        <ImageView
                            android:id="@+id/likes_image"
                            style="@style/personal_big_button_icon"
                            android:src="@drawable/my_dynamic" />

                        <TextView
                            android:id="@+id/likes_text"
                            style="@style/personal_big_button_text"
                            android:text="我的动态" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/personal_big_button_panel" >

                    <LinearLayout
                        android:id="@+id/button_myfriend"
                        style="@style/personal_big_button" >

                        <ImageView
                            android:id="@+id/attention_image"
                            style="@style/personal_big_button_icon"
                            android:src="@drawable/my_friend" />

                        <TextView
                            android:id="@+id/my_attention_text"
                            style="@style/personal_big_button_text"
                            android:text="我的好友" />

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/personal_big_button_panel" >

                    <LinearLayout
                        android:id="@+id/button_my_collect"
                        style="@style/personal_big_button" >

                        <ImageView
                            android:id="@+id/fans_image"
                            style="@style/personal_big_button_icon"
                            android:src="@drawable/my_collect" />

                        <TextView
                            android:id="@+id/fans_text"
                            style="@style/personal_big_button_text"
                            android:text="我的收藏" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/linearLayout1"
                android:orientation="horizontal" >

                <RelativeLayout style="@style/personal_big_button_panel" >

                    <LinearLayout
                        android:id="@+id/button_my_message"
                        style="@style/personal_big_button" >

                        <ImageView
                            android:id="@+id/likes_image"
                            style="@style/personal_big_button_icon"
                            android:src="@drawable/my_chat" />

                        <TextView
                            android:id="@+id/likes_text"
                            style="@style/personal_big_button_text"
                            android:text="我的消息" />

                        <TextView
                            android:id="@+id/likes_num"
                            style="@style/personal_big_button_text_number" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/personal_big_button_panel" >

                    <LinearLayout
                        android:id="@+id/button_my_ly"
                        style="@style/personal_big_button" >

                        <ImageView
                            android:id="@+id/attention_image"
                            style="@style/personal_big_button_icon"
                            android:src="@drawable/my_message" />

                        <TextView
                            android:id="@+id/my_attention_text"
                            style="@style/personal_big_button_text"
                            android:text="我的留言" />

                        <TextView
                            android:id="@+id/attention_num"
                            style="@style/personal_big_button_text_number" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout style="@style/personal_big_button_panel" >

                    <LinearLayout
                        android:id="@+id/button_my_pub"
                        style="@style/personal_big_button" >

                        <ImageView
                            android:id="@+id/fans_image"
                            style="@style/personal_big_button_icon"
                            android:src="@drawable/my_pub" />

                        <TextView
                            android:id="@+id/fans_text"
                            style="@style/personal_big_button_text"
                            android:text="我发布的" />

                        <TextView
                            android:id="@+id/fans_num"
                            style="@style/personal_big_button_text_number" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>