<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff1f1f1" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip" >

            <LinearLayout
                android:id="@+id/change_user"
                style="@style/setting_bg_layout"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/more_up" >

                <TextView
                    android:id="@+id/account_name"
                    style="@style/setting_bg_text"
                    android:text="更换用户" />

                <ImageView
                    android:id="@+id/arrow"
                    style="@style/setting_bg_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/alert_password"
                style="@style/setting_bg_layout"
                android:background="@drawable/more_middle" >

                <TextView
                    android:id="@+id/msg_remind_text"
                    style="@style/setting_bg_text"
                    android:text="修改密码" />

                <TextView
                    android:id="@+id/frequency_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:singleLine="true"
                    android:textColor="#ff7f7f7f"
                    android:textSize="12.0sp" />

                <ImageView
                    android:id="@+id/arrow2"
                    style="@style/setting_bg_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                style="@style/setting_bg_layout"
                android:background="@drawable/more_down" >

                <TextView
                    android:id="@+id/person_info_text"
                    style="@style/setting_bg_text"
                    android:text="注销" />

                
            </LinearLayout>

            <FrameLayout
                style="@style/setting_bg_layout"
                android:layout_marginBottom="10.0dip"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/new_version_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="108.0dip"
                    android:src="@drawable/ico_news_prompt"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/title"
        layout="@layout/header" />

</RelativeLayout>